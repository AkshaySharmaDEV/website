        <li><%= link_to 'Online Application Form', 'https://goo.gl/forms/LpD3cCDmxHA7iBv72' %></li>
        <li><%= link_to 'Information Document - PDF', '/media/forms/Club-Offerings_Term-2_2019.pdf' %></li>
      </ul>
